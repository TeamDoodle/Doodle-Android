<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    tools:context=".Doodle_Me.MyfeedActivity"
    android:background="@drawable/bgopacity"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

        <!--커스텀 액션바-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0">
            <TextView
                android:id="@+id/myfeed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:text="나의글"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <!--커스텀 액션바 end-->
        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/myfeed_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true"
                android:descendantFocusability="beforeDescendants"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="130dp">
                    <ImageView
                        android:id="@+id/myfeed_profilePhoto"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:background="#fffb00"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:layout_toRightOf="@id/myfeed_profilePhoto">
                        <TextView
                            android:id="@+id/myfeed_writingName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:text="필명"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="감성 "/>
                            <TextView
                                android:id="@+id/myfeed_postingNum"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="29"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:text="담아감 "/>
                                <TextView
                                    android:id="@+id/myfeed_scrapNum"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:text="823"/>


                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                    <TextView
                        android:id="@+id/myfeed_editProfile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="35dp"
                        android:textSize="13sp"
                        android:text="프로필 수정"/>
                    <TextView
                        android:id="@+id/myfeed_profileComment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_below="@id/myfeed_profilePhoto"
                        android:layout_marginTop="15dp"
                        android:textSize="13sp"
                        android:text="'당신의 끄적임이 글이 되는 곳'"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/myfeed_gatherFeed"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="모아보기"
                        android:textAlignment="center" />
                    <TextView
                        android:id="@+id/myfeed_scrapFeed"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:text="담아보기"
                        android:textAlignment="center" />
                </LinearLayout>

                <!--<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
                    <!--android:id="@+id/myfeed_fragmentContainer"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="0dp"-->
                    <!--android:layout_weight="1">-->

                <!--</FrameLayout>-->
                <!--뷰페이저 시작-->
                <!--<com.doodle.doodle.Doodle_Read.SwipeViewPager-->
                    <!--android:id="@+id/myfeed_viewPager"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:layout_marginRight="10dp"-->
                    <!--&gt;-->

                <!--</com.doodle.doodle.Doodle_Read.SwipeViewPager>-->
                <!--뷰페이저 끝-->
                <com.doodle.doodle.Doodle_Me.mySwipeViewPager
                    android:id="@+id/myfeed_viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                </com.doodle.doodle.Doodle_Me.mySwipeViewPager>
            </LinearLayout>



        </ScrollView>



</LinearLayout>
