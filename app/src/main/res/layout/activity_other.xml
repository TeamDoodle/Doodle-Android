<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.doodle.doodle.Doodle_Others.OtherActivity">

    <!--커스텀 액션바-->
    <LinearLayout
        android:background="@drawable/bgopacity"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#707070" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:background="#707070" />
    <!--커스텀 액션바 끝-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <ImageView
            android:id="@+id/other_profile"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:background="#fffb00"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_toRightOf="@id/other_profile">
            <TextView
                android:textColor="#464646"
                android:fontFamily="@font/nanum_myeongjo_extra_bold"
                android:id="@+id/other_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="필명"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">
                <TextView
                    android:textColor="#464646"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="감성 "/>
                <TextView
                    android:textColor="#464646"
                    android:id="@+id/other_posting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="29"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="#464646"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="담아감 "/>
                    <TextView
                        android:textColor="#464646"
                        android:id="@+id/other_scrap"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="823"/>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:textColor="#464646"
            android:id="@+id/other_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/other_profile"
            android:layout_marginTop="15dp"
            android:textSize="12sp"
            android:text="'당신의 끄적임이 글이 되는 곳'"/>

    </RelativeLayout>
 <FrameLayout
     android:id="@+id/other_frame"
     android:layout_marginRight="3dp"
     android:layout_marginLeft="3dp"
     android:background="@drawable/dayfeelinglayer"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
     <android.support.v7.widget.RecyclerView
         android:id="@+id/other_recyclerview"
         android:layout_width="match_parent"
         android:layout_height="match_parent">

     </android.support.v7.widget.RecyclerView>
 </FrameLayout>

</LinearLayout>
