<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


        <!--커스텀 액션바-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="0">
            <TextView
                android:id="@+id/myfeed_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:text="나의글"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
        <!--커스텀 액션바 end-->

    <LinearLayout
        android:orientation="vertical"
        android:focusableInTouchMode="true"
        android:descendantFocusability="beforeDescendants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:id="@+id/myfeed_big_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="#fffb00"/>
            <TextView
                android:layout_toRightOf="@+id/myfeed_big_profile"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:id="@+id/myfeed_big_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:textSize="13sp"
                android:text="필명"/>

    <FrameLayout
        android:id="@+id/big_fragment"
        android:background="@drawable/dayfeelinglayer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    </LinearLayout>







</LinearLayout>
