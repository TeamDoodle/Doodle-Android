<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:background="@drawable/datebox"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#ffffff"
            android:text="2018년 3월 1일"
            android:id="@+id/today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:layout_marginTop="10dp"
        android:id="@+id/day_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:src="@drawable/mytext5"/>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <!--공감-->
            <TextView
                android:padding="5dp"
                android:id="@+id/day_like"
                android:text="공감"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/day_like_count"
                android:text="168"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--댓글-->
            <TextView
                android:padding="5dp"
                android:id="@+id/day_comment"
                android:layout_marginLeft="5dp"
                android:text="댓글"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/day_comment_count"
                android:text="168"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--담아감-->
            <TextView
                android:padding="5dp"
                android:id="@+id/day_scrap"
                android:layout_marginLeft="5dp"
                android:text="담아감"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:padding="5dp"
                android:id="@+id/day_scrap_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6" />
        </LinearLayout>

        <TextView
            android:padding="5dp"
            android:textColor="#000000"
            android:id="@+id/day_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="김연규" />

    </RelativeLayout>

</LinearLayout>